// schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
  // Added previewFeatures for better MySQL support
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // Added relationMode for better MySQL compatibility
  relationMode = "foreignKeys"
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  fileUrl   String   @db.Text
  year      String   @db.VarChar(4)
  subject   String   @db.VarChar(100)
  course    String   @db.VarChar(100)
  type      String   @db.VarChar(50)
  folder    String   @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt @db.Timestamp(6)

  // Improved indexing strategy
  @@index([year, subject])
  @@index([type, course])
  @@fulltext([title]) // Added for better search capabilities

  // Added proper table name
  @@map("notes")
}